# All Machine Config

# Powerlevel10k instant prompt. Keep close to the top of file

if [[ -r "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh" ]]; then
  source "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh"
fi


# Stolen shamelessly from https://github.com/andrew8088/dotfiles/blob/main/zsh/rc.zsh
source_if_exists () {
    if test -r "$1"; then
        source "$1"
    fi
}

export ZSH="$HOME/.oh-my-zsh"
ZSH_THEME="powerlevel10k/powerlevel10k"

# Auto Update Config
zstyle ':omz:update' mode reminder    # Auto Update Remind
zstyle ':omz:update' frequency 14 # Auto Update Frequency
# Prompt/Behavior Config

ENABLE_CORRECTION="true" # Command Auto Correction
COMPLETION_WAITING_DOTS="true" # Red Waiting Dots 
ZSH_CUSTOM=~/.zshplugs #ZSH Custom Plugin Dir
{{- if eq .chezmoi.os "darwin" }}
plugins=(git fzf-tab poetry)
{{- else }}
plugins=(git fzf-tab poetry)
{{- end }}

source $ZSH/oh-my-zsh.sh

# Personal zsh config

source_if_exists $HOME/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh
source_if_exists $HOME/zsh/aliases.zsh
source_if_exists $HOME/zsh/env

#History Customization
setopt HIST_IGNORE_SPACE
setopt no_hist_verify


# P10K Load-in 
[[ ! -f ~/.p10k.zsh ]] || source ~/.p10k.zsh

# Fuzzy Finder
[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh

# PATH Stuff
export PATH=/usr/local/bin:/System/Cryptexes/App/usr/bin:/usr/bin:/bin:/usr/sbin:/sbin
{{- if eq .chezmoi.os "darwin" }}
path+=("/usr/local/MacGPG2/bin")
{{- end }}
path=("/$HOME/.local/bin" $path)
path+=("/opt/devkitpro/tools/bin")
export PATH


