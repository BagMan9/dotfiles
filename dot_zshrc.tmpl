# Powerlevel10k instant prompt. Keep close to the top of file
# Initialization code that may require console input (password prompts, [y/n]
# confirmations, etc.) must go above this block; everything else may go below.
if [[ -r "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh" ]]; then
  source "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh"
fi
# Stolen shamelessly from https://github.com/andrew8088/dotfiles/blob/main/zsh/rc.zsh
source_if_exists () {
    if test -r "$1"; then
        source "$1"
    fi
}

# oh-my-zsh path
export ZSH="$HOME/.oh-my-zsh"
ZSH_THEME="powerlevel10k/powerlevel10k"

zstyle ':omz:update' mode reminder    # Auto Update Remind

zstyle ':omz:update' frequency 14 # Auto Update Frequency

ENABLE_CORRECTION="true" # Command Auto Correction

COMPLETION_WAITING_DOTS="true" # Red Waiting Dots 

ZSH_CUSTOM=~/.zshplugs #ZSH Custom Plugin Dir

plugins=(git iterm2 brew fzf-tab poetry)

source $ZSH/oh-my-zsh.sh

# Personal zsh config


source_if_exists $HOME/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh
source_if_exists $HOME/zsh/aliases.zsh
source_if_exists $HOME/zsh/env

#History Customization
setopt HIST_IGNORE_SPACE
setopt no_hist_verify

# Homebrew Customization
export HOMEBREW_NO_ENV_HINTS=TRUE

# P10K Load-in 
[[ ! -f ~/.p10k.zsh ]] || source ~/.p10k.zsh

# Fuzzy Finder
[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh

# PATH Stuff
export PATH=/usr/local/bin:/System/Cryptexes/App/usr/bin:/usr/bin:/bin:/usr/sbin:/sbin
{{- if eq .chezmoi.os "darwin" }}
path=("/opt/homebrew/opt/python/libexec/bin" $path)
path=("/opt/homebrew/sbin" $path)
path=("/opt/homebrew/bin" $path)
path+=("/usr/local/MacGPG2/bin")
{{- end }}
path=("/$HOME/.local/bin" $path)
path+=("/opt/devkitpro/tools/bin")
export PATH


